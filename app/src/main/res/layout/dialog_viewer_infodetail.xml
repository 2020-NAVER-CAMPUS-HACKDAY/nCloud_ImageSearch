<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="사진 정보"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/d_photo_date_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜 : "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/d_photo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-05-08"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/d_photo_gps_lbl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="위치 : "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/d_photo_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경도 100, 위도 100"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/d_photo_tag_lbl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="태그 : "
            android:textStyle="bold"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/d_photo_tag1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="tag1"/>

            <TextView
                android:id="@+id/d_photo_tag2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="tag2"/>

            <TextView
                android:id="@+id/d_photo_tag3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="tag3"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>